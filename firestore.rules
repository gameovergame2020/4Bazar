rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Foydalanuvchilar kolleksiyasi
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Boshqa foydalanuvchilar ma'lumotlarini o'qish uchun
    }
    
    // Tortlar kolleksiyasi
    match /cakes/{cakeId} {
      allow read: if true; // Hamma tortlarni ko'rishi mumkin
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.bakerId || 
         request.auth.uid == resource.data.shopId); // Faqat o'z mahsulotlarini tahrirlash
      allow create: if request.auth != null;
    }
    
    // Buyurtmalar kolleksiyasi
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.customerId || 
         request.auth.uid == resource.data.bakerId ||
         request.auth.uid == resource.data.courierId);
      allow create: if request.auth != null;
    }
    
    // Sharhlar kolleksiyasi
    match /reviews/{reviewId} {
      allow read: if true; // Hamma sharhlarni ko'rishi mumkin
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Sevimlilar kolleksiyasi
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bildirishnomalar kolleksiyasi
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Manzillar kolleksiyasi
    match /addresses/{addressId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // To'lov usullari kolleksiyasi
    match /payment_methods/{paymentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
  }
}